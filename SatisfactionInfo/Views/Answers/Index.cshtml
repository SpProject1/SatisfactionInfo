@model IEnumerable<AnswersDTO>
@{
    ViewData["Title"] = "Index";
}     
<p>
    <a asp-action="Create">Utówrz nowy</a>
</p>
@if (Model != null && Model.Count() > 0)
{
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Answer)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                string url = Url.Action("Delete", "Answers") + "/" + item.Id;
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Answer)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-danger">Edit</a> |
                        @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                        <button onclick="deleteItem('@url')" class="btn btn-danger">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}   
