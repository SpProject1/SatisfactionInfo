@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Zmiana hasła";
}

<h4 class="center">@ViewData["Title"]</h4>
@*@Html.Partial("_StatusMessage", Model.StatusMessage)*@
<div>
    <form id="change-password-form" method="post">
        <div asp-validation-summary="All" class="danger_txt"></div>
        <div class="grid">
            <div class="col1 col2 col3 col4 col5">
                <div class="inline">
                    <div class="label_def">
                        <label asp-for="Input.OldPassword"></label>
                    </div>
                    <div>
                        <input asp-for="Input.OldPassword" class="input_txt" />
                    </div>
                </div>
                <div class="inline">
                    <div class="label_def">
                        <label asp-for="Input.NewPassword"></label>
                    </div>
                    <div>
                        <input asp-for="Input.NewPassword" class="input_txt" />
                    </div>
                </div>
                <div class="inline">
                    <div class="label_def">
                        <label asp-for="Input.ConfirmPassword"></label>
                    </div>
                    <div>
                        <input asp-for="Input.ConfirmPassword" class="input_txt" />
                    </div>
                </div>
            </div>
        </div>
        <div>
            <button type="submit" class="right button_def col6 col7 col8 col9 col10">Zaktualizuj</button>
        </div>
    </form>
</div>

@section Scripts {
    @if (Model.StatusMessage != null)
    {
        <script>addInfo(2, '@Model.StatusMessage');</script>
    }
    <partial name="_ValidationScriptsPartial" />
}
